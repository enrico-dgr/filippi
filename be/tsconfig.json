{
  "compilerOptions": {
    "noEmit": false,
    "watch": false,
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["DOM"],
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "declaration": false
  },
  "exclude": ["./dist"],
  "include": ["./src"]
}
